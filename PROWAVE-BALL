<script>
// ===========================
// HARD-CODED TEAMS & PLAYERS
// ===========================
const teams = [
{
    name: "Maxaquene",
    founded: "Founded in 1920 • Maputo",
    players: [
        { name: "Armando Nhantumbo", position: "PG", height: "5'11\"", weight: "78kg", age: 24 },
        { name: "Edmilson Muianga", position: "SG", height: "6'3\"", weight: "85kg", age: 26 },
        { name: "Nelson Cossa", position: "SF", height: "6'6\"", weight: "92kg", age: 28 },
        { name: "Ivandro Jamal", position: "PF", height: "6'8\"", weight: "98kg", age: 27 },
        { name: "Carlos Manjate", position: "C",  height: "6'11\"", weight: "110kg", age: 30 },
        { name: "Ismael Jone", position: "PG", height: "6'0\"", weight: "80kg", age: 22 },
        { name: "Rui Mucavele", position: "SG", height: "6'4\"", weight: "88kg", age: 25 },
        { name: "Helio Macamo", position: "SF", height: "6'7\"", weight: "94kg", age: 29 },
        { name: "Paulo Nhabanga", position: "PF", height: "6'9\"", weight: "102kg", age: 31 },
        { name: "Mateus Bila", position: "C",  height: "7'0\"", weight: "112kg", age: 33 },
        { name: "Alfredo Zaqueu", position: "SG", height: "6'2\"", weight: "84kg", age: 23 },
        { name: "Joao Mabote", position: "SF", height: "6'5\"", weight: "90kg", age: 26 }
    ]
}
];

// ===========================
// ELEMENTS
// ===========================
const teamsDiv = document.getElementById("teams");
const roster = document.getElementById("roster");
const playerCard = document.getElementById("playerCard");

// ===========================
// RENDER TEAMS
// ===========================
teams.forEach(team => {
    const div = document.createElement("div");
    div.className = "team-card";
    div.innerHTML = `<h3>${team.name}</h3><p>${team.founded}</p>`;
    div.onclick = () => openTeam(team);
    teamsDiv.appendChild(div);
});

// ===========================
// NAVIGATION FUNCTIONS
// ===========================
function openTeam(team){
    teamsDiv.classList.add("hidden");
    roster.classList.remove("hidden");
    document.getElementById("teamName").innerText = team.name;
    document.getElementById("teamInfo").innerText = team.founded;

    const list = document.getElementById("playerList");
    list.innerHTML = "";
    team.players.forEach(player => {
        const li = document.createElement("li");
        li.setAttribute("data-pos", player.position);
        li.innerText = player.name;
        li.onclick = () => openPlayer(player);
        list.appendChild(li);
    });
}

function openPlayer(player){
    roster.classList.add("hidden");
    playerCard.classList.remove("hidden");

    document.getElementById("playerName").innerText = player.name;
    document.getElementById("playerPos").innerText = player.position;
    document.getElementById("playerHeight").innerText = player.height;
    document.getElementById("playerWeight").innerText = player.weight;
    document.getElementById("playerAge").innerText = player.age;
}

function backToTeams(){
    roster.classList.add("hidden");
    playerCard.classList.add("hidden");
    teamsDiv.classList.remove("hidden");
}

function backToRoster(){
    playerCard.classList.add("hidden");
    roster.classList.remove("hidden");
}
</script>

</body>
</html>
